<%- include('partials/header.ejs') %>  
<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="mb-2">Realizar pergunta</h3>
    </div>
    <div class="card-body">
      <form method="POST" action="/salvarpergunta">
        <label for="titulo">Título</label>
        <input
          type="text"
          placeholder="Título"
          id="titulo"
          class="form-control mb-3"
          required
        />
        <label for="descricao">Descrição</label>
        <textarea
          placeholder="Descreva sua pergunta aqui"
          class="form-control"
          id="descricao"
          required
        ></textarea>
        <button class="btn btn-primary mt-3">Perguntar</button>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %> 